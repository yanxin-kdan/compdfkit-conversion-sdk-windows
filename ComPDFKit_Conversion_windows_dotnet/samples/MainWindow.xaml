<Window x:Class="ComPDF_Conversion_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComPDF_Conversion_Demo"
        mc:Ignorable="d"
        Title="ComPDF Conversion SDK V3.2.0" Height="450" Width="800"
        WindowStartupLocation ="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="0,50,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Input" Content="Input"  Width="80" Height="30" Click="Input_Click"/>
                <TextBox x:Name="InputPath" Width="300" Height="30" Margin="10" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Output" Content="Output" Width="80" Height="30" Click="Output_Click" />
                <TextBox x:Name="OutputPath" Width="300" Height="30" Margin="10" IsReadOnly="True" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Convert Type : " Width="90" Height="30" TextAlignment="Center"/>
                <ComboBox x:Name="ConvertType" Width="193" Height="30" SelectedIndex="0" Margin="10">
                    <ComboBoxItem x:Name="Word" Content="Word" />
                    <ComboBoxItem x:Name="Excel" Content="Excel" />
                    <ComboBoxItem x:Name="Ppt" Content="PPT" />
                    <ComboBoxItem x:Name="Html" Content="HTML" />
                    <ComboBoxItem x:Name="Rtf" Content="RTF" />
                    <ComboBoxItem x:Name="SearchablePDF" Content="Searchable PDF" />
                    <ComboBoxItem x:Name="Txt" Content="TXT"/>
                    <ComboBoxItem x:Name="Image" Content="Image"/>
                    <ComboBoxItem x:Name="Json" Content="JSON"/>
                    <ComboBoxItem x:Name="Markdown" Content="Markdown"/>
                </ComboBox>
                <Button x:Name="ConverterOptions" Content="Options" Width="90" Height="30" Margin="0,10,10,10" Click="ConverterOptions_Click" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Progress : " Width="80" Height="30" TextAlignment="Center"/>
                <TextBlock x:Name="Progress" Width="300" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Convert" Content="Convert" Width="80" Height="30" Click="Convert_Click"/>
                <Button x:Name="Cancel" Content="Cancel" Width="80" Height="30" Margin="10,0,0,0" IsEnabled="false" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
